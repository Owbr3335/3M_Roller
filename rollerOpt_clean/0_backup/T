//        valueExpression         "(pos().x > 0.024 && pos().x < 0.026) ? 3000 : 300";
//        value                   uniform 300;
	type		fixedValue;
	value		uniform 2000;
    }

    top
    {
	type		inletOutlet;
	inletValue	uniform 300;
	value		uniform 300;
    }

    sides
    {
        type            inletOutlet;
	inletValue 	uniform 300;
	value		uniform 300;
    }

    lowerOutlet
    {
