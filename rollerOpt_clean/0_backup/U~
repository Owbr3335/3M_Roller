FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{

    roller
    {
	type		rotatingWallVelocity;
	origin		(0 0.14605 0.05);
	axis		(0 0 1);
	omega		15;
	value		uniform (0 0 0);
    }

    burner
    {
	type		fixedValue;
	value		uniform (0 1 0);
    }

    top
    {
	type		pressureInletOutletVelocity;
	value		uniform (0 0 0);
	phi		phi;
    }

    sides
    {
	type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
        phi             phi;
    }

    lowerOutlet
    {
	type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
        phi             phi;
    }
}

